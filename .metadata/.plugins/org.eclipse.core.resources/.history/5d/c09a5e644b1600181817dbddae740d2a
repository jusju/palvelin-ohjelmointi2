package palvelinohjelmointi.Bookstore;

import java.util.Arrays;
import java.util.List;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.autoconfigure.web.servlet.WebMvcTest;
import org.springframework.boot.test.mock.mockito.MockBean;
import org.springframework.test.context.junit4.SpringRunner;
import org.springframework.test.web.servlet.MockMvc;

import palvelinohjelmointi.Bookstore.domain.Book;
import palvelinohjelmointi.Bookstore.domain.Category;
import palvelinohjelmointi.Bookstore.web.BookController;

@RunWith(SpringRunner.class)
@WebMvcTest(WebLayerTests.class)
public class WebLayerTests {
	@Autowired
	private MockMvc mockMvc;

	@MockBean
	private BookController service;
	
	@Test
	public void testBookList() throws Exception {
		
		Book book = new Book("Mickey", "1234567-1", "Java Book", "2018", new Category("Fiction"));
		 
	    List<Book> booklist = Arrays.asList(book);
	 
	    given(service.booklist()).willReturn(booklist());
		
	    this.mockMvc.perform(get("/books")).andDo(print()).andExpect(status().isOk())
		.andExpect(jsonPath("$", hasSize(1)))
		.andExpect(jsonPath("$[0].title", is(book.getTitle())));
	}
}
